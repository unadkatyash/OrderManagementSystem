@page
@model OrderManagementSystem.API.Pages.Orders.CreateModel
@{
    ViewData["Title"] = "Create Order";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-plus"></i> Create New Order</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Order.CustomerName" class="form-label">Customer Name</label>
                                <input asp-for="Order.CustomerName" class="form-control" required />
                                <span asp-validation-for="Order.CustomerName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Order.CustomerEmail" class="form-label">Customer Email</label>
                                <input asp-for="Order.CustomerEmail" type="email" class="form-control" required />
                                <span asp-validation-for="Order.CustomerEmail" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Order.ShippingAddress" class="form-label">Shipping Address</label>
                        <textarea asp-for="Order.ShippingAddress" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="Order.ShippingAddress" class="text-danger"></span>
                    </div>

                    <h5 class="mt-4 mb-3">Order Items</h5>
                    <div id="order-items">
                        <div class="row order-item mb-3">
                            <div class="col-5">
                                <input name="Order.OrderItems[0].ProductName" placeholder="Product Name" class="form-control" required />
                            </div>
                            <div class="col-3">
                                <input name="Order.OrderItems[0].Quantity" type="number" placeholder="Qty" class="form-control" min="1" required />
                            </div>
                            <div class="col-3">
                                <input name="Order.OrderItems[0].UnitPrice" type="number" step="0.01" placeholder="Price" class="form-control" min="0" required />
                            </div>
                            <div class="col-1">
                                <button type="button" class="btn btn-danger btn-sm" onclick="removeItem(this)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <button type="button" class="btn btn-secondary btn-sm mb-3" onclick="addItem()">
                        <i class="fas fa-plus"></i> Add Item
                    </button>

                    <div class="d-flex justify-content-between">
                        <a href="/" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Orders
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Order
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let itemIndex = 1;

        function addItem() {
            const container = document.getElementById('order-items');
            const newItem = document.createElement('div');
            newItem.className = 'row order-item mb-3';
            newItem.innerHTML = `
                        <div class="col-5">
                            <input name="Order.OrderItems[${itemIndex}].ProductName" placeholder="Product Name" class="form-control" required />
                        </div>
                        <div class="col-3">
                            <input name="Order.OrderItems[${itemIndex}].Quantity" type="number" placeholder="Qty" class="form-control" min="1" required />
                        </div>
                        <div class="col-3">
                            <input name="Order.OrderItems[${itemIndex}].UnitPrice" type="number" step="0.01" placeholder="Price" class="form-control" min="0" required />
                        </div>
                        <div class="col-1">
                            <button type="button" class="btn btn-danger btn-sm" onclick="removeItem(this)">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    `;
            container.appendChild(newItem);
            itemIndex++;
        }

        function removeItem(button) {
            const items = document.querySelectorAll('.order-item');
            if (items.length > 1) {
                button.closest('.order-item').remove();
            }
        }
    </script>
}